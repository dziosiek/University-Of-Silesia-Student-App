<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_register_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_background"
    tools:context=".fragments.startup_panels.Register">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="312dp"
            android:layout_height="535dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="#b2ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/fragment_register_login_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:hint="Type login here"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView6" />

            <EditText
                android:id="@+id/fragment_register_password_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:hint="Type password here"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="@+id/fragment_register_login_id"
                app:layout_constraintStart_toStartOf="@+id/fragment_register_login_id"
                app:layout_constraintTop_toBottomOf="@+id/fragment_register_login_id" />

            <EditText
                android:id="@+id/fragment_register_repeat_password_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Retype password here"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="@+id/fragment_register_password_id"
                app:layout_constraintStart_toStartOf="@+id/fragment_register_password_id"
                app:layout_constraintTop_toBottomOf="@+id/fragment_register_password_id" />

            <EditText
                android:id="@+id/fragment_register_firstname_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Type your firstname"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/fragment_register_repeat_password_id"
                app:layout_constraintStart_toStartOf="@+id/fragment_register_repeat_password_id"
                app:layout_constraintTop_toBottomOf="@+id/fragment_register_repeat_password_id" />

            <EditText
                android:id="@+id/fragment_register_lastname_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:hint="Type your lastname"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/fragment_register_firstname_id"
                app:layout_constraintStart_toStartOf="@+id/fragment_register_firstname_id"
                app:layout_constraintTop_toBottomOf="@+id/fragment_register_firstname_id" />

            <EditText
                android:id="@+id/fragment_register_email_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Type your email"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/fragment_register_lastname_id"
                app:layout_constraintStart_toStartOf="@+id/fragment_register_lastname_id"
                app:layout_constraintTop_toBottomOf="@+id/fragment_register_lastname_id" />

            <Button
                android:id="@+id/fragment_register_register_btn_id"
                android:layout_width="154dp"
                android:layout_height="42dp"
                android:layout_marginTop="8dp"
                android:text="Register"
                app:layout_constraintEnd_toEndOf="@+id/fragment_register_email_id"
                app:layout_constraintStart_toStartOf="@+id/fragment_register_email_id"
                app:layout_constraintTop_toBottomOf="@+id/fragment_register_email_id" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="152dp"
                android:layout_height="152dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/us_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>